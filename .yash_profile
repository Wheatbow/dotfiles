#!/bin/sh
#shellcheck disable=SC3043

if [ -z "$XDG_RUNTIME_DIR" ]; then
	XDG_RUNTIME_DIR="$TMPDIR/$(id -u)-runtime-dir"
	export XDG_RUNTIME_DIR
	if [ ! -d "$XDG_RUNTIME_DIR" ]; then
		mkdir "$XDG_RUNTIME_DIR"
		chmod 0700 "$XDG_RUNTIME_DIR"
	fi
fi

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

export EDITOR="hx"
export BROWSER="firefox"

# nodejs
export NPM_CONFIG_USERCONFIG="$XDG_CONFIG_HOME/npm/npmrc"

# llama-cpp
export GGML_VK_FORCE_MAX_ALLOCATION_SIZE="2147483646"

# Termux
if [ -n "$TERMUX__PREFIX" ]; then

	# Workaround: PREFIX set by Termux interferes with some commands
	unset PREFIX

	# Workaround: OpenCL libraries on Adreno devices need to be copied and LD_LIBRARY_PATH must be set
	if [ -f "/system/vendor/lib64/libOpenCL_adreno.so" ]; then
  	export LD_LIBRARY_PATH="$TERMUX__PREFIX/opt/vendor/lib"
  	mkdir -p "$LD_LIBRARY_PATH"
		cp "/system/vendor/lib64/libOpenCL.so" "$LD_LIBRARY_PATH"
  	cp "/system/vendor/lib64/libOpenCL_adreno.so" "$LD_LIBRARY_PATH"
	fi

	# hangover-wine
	if [ -f "$TERMUX__PREFIX/bin/hangover-wine" ]; then
		export PATH="$TERMUX__PREFIX/opt/hangover-wine/bin:$PATH"
		export HODLL="libwow64fex.dll"
		export HODLL64="libarm64ecfex.dll"
	fi

	# node-gyp
	export GYP_DEFINES="android_ndk_path=''"

	export SSH_AUTH_SOCK="$TERMUX__PREFIX/var/run/ssh-agent.socket"
	
fi

